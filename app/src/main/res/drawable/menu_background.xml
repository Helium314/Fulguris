<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="5dp" android:left="5dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="#10000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />
        </shape>
    </item>

    <item android:top="5dp" android:left="5dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="#20000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>

    <item android:top="5dp" android:left="5dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#30000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>

    <item android:top="5dp" android:left="5dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="#40000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>

    <item android:top="5dp" android:left="5dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#50000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>

    <item android:top="0dp" android:left="0dp" android:right="5dp" android:bottom="5dp">
        <shape>
            <!--
            Those android:attr apparently need API level 21 or above
            <solid android:color="?android:attr/colorBackground"/>
            Therefore we use ?attr/colorSurface instead which is defined as the same color in material components
            See: https://stackoverflow.com/a/65569549/3969362
            See: https://github.com/material-components/material-components-android/blob/master/lib/java/com/google/android/material/color/res/values/colors.xml
             -->
            <!--
            TODO: use this once we migrate our themes to material components
            <solid android:color="?attr/colorSurface"/>
            See: https://github.com/Slion/Fulguris/issues/119
            Use the following until we migrate to material components
            -->
            <solid android:color="?attr/colorPrimary"/>
            <corners android:radius="@dimen/menu_corner_radius" />
        </shape>
    </item>

</layer-list>

